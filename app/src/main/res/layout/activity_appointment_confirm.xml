<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9FAFB"> <!-- Light Gray background for the whole layout -->

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="20dp"
    android:elevation="6dp" />

    <TextView
        android:id="@+id/textViewConfirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Confirmation"
        android:textSize="26sp"
        android:textColor="#1F2937"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your appointment has been successfully requested!"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_below="@id/textViewConfirmationTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:elevation="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConfirmationMessage"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:textColor="#1F2937"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/textViewNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            android:textColor="#1F2937"
        android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textViewEmailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="john.doe@example.com"
            android:textSize="16sp"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPhoneNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textSize="16sp"
            android:textColor="#1F2937"
        android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textViewPhoneNumberValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1234567890"
            android:textSize="16sp"
            android:textColor="#333333" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewAppointmentDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Details:"
        android:textSize="16sp"
        android:textColor="#1F2937"
    android:layout_marginTop="25dp"
    android:paddingVertical="4dp" />

    <TextView
        android:id="@+id/textViewAppointmentDetailsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 12/12/2024\nTime: 10:00 AM\nService: General Checkup"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />
</LinearLayout>

    <!-- New Button to Speak with Chatbot -->
<Button
    android:id="@+id/buttonSpeakWithChatbot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Speak with our chatbot"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:elevation="6dp" />
    </RelativeLayout>
